<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/remove_item_button"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:onClick="removeItemButtonClickEventHandler"
        android:background="@android:drawable/ic_menu_delete" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/remove_item_button"
        android:layout_toRightOf="@+id/remove_item_button"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/food_item"
            android:textSize="@dimen/header_h2_font_size" />

        <TextView
            android:id="@+id/food_measure_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/measurement"
            android:textSize="@dimen/normal_text_font_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_qt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/quantity_edit_text"
        android:layout_toStartOf="@+id/quantity_edit_text"
        android:text="@string/qt"
        android:textSize="@dimen/header_h3_font_size" />

    <EditText
        android:id="@+id/quantity_edit_text"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/normal_text_font_size" />

</RelativeLayout>